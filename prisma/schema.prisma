generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid()) @map("_id")
  email    String     @unique
  name     String
  surname  String
  phone    String     @unique
  password String
  token    String
  requests Requests[]
}

model Requests {
  id     String @id @default(uuid()) @map("_id")
  type   String?
  year   String?
  make   String?
  model  String?
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
