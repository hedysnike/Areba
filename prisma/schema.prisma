// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  surname    String
  phone      String   @unique
  password   String
  token      String
  requests   Requests @relation(fields: [requestsId], references: [id])
  requestsId Int
}

model Requests {
  id    Int    @id @default(autoincrement())
  type  String
  year  String
  make  String
  model String
  name  String
  User  User[]
}
