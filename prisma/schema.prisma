generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Buyer
  Seller
}

model User {
  role     Role       @default(Buyer)
  id       String     @id @default(uuid()) @map("_id")
  email    String     @unique
  name     String
  surname  String
  phone    String     @unique
  password String
  token    String     @unique
  requests Requests[]
}

enum Status {
  Open
  Old
  Closed
}

model Requests {
  id      String  @id @default(uuid()) @map("_id")
  type    String?
  year    Int?
  make    String?
  model   String?
  details String
  status  Status  @default(Open)
  user    User    @relation(fields: [userId], references: [id])
  userId  String
}
